<div class='home_image'>
  <div class='to_do_form'>
    <div class='container'>
    <h1>Welcome to the To Do list</h1>

    <% if @all_lists.any? %>
      <ul>
        <% @all_lists.each() do |list| %>
        <li><a href='/lists/<%=list.id() %>'><%=list.name %></a></li>
        <% end %>
      </ul>
      <% else %>
      <p>There are no lists created yet, add one below</p>
    <% end %>

     <form action='/' method='post' >
       <input class='form-control' type="text" name="list_name" placeholder="Name your list">
     </form>
     <br>
     <button class='btn btn-success' type='submit'>Add List</button>
   </div>
  </div>
</div>
